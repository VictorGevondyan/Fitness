<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <LinearLayout
            android:id="@+id/try_for_free"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_rect_grey"
            android:paddingLeft="@dimen/button_lateral_padding"
            android:paddingRight="@dimen/button_lateral_padding"
            android:paddingTop="@dimen/button_top_bottom_padding"
            android:paddingBottom="@dimen/button_top_bottom_padding"
            android:layout_marginBottom="@dimen/common_margin"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/try_for_free"
                android:textColor="@color/colorGrayLight"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_month"
                android:textColor="@color/text_dark_grey"
                android:textSize="11dp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>